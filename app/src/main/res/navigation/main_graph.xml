<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.alkemymovieschallenge.movies.ui.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_movieDetailFragment"
            app:destination="@id/detailMoviesFragment" />
    </fragment>
    <fragment
        android:id="@+id/seriesFragment"
        android:name="com.example.alkemymovieschallenge.series.ui.SeriesFragment"
        android:label="fragment_series"
        tools:layout="@layout/fragment_series">
        <action
            android:id="@+id/action_seriesFragment_to_seriesDetailFragment"
            app:destination="@id/detailSeriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.alkemymovieschallenge.favorites.ui.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/detailMoviesFragment"
        android:name="com.example.alkemymovieschallenge.detail.ui.DetailMoviesFragment"
        android:label="fragment_movies_detail"
        tools:layout="@layout/fragment_detail">
        <action android:id="@+id/action_movieDetailFragment_to_favoritesFragment" />
        <argument
            android:name="movieId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.alkemymovieschallenge.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailMoviesFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailSeriesFragment"
        android:name="com.example.alkemymovieschallenge.detail.ui.DetailSeriesFragment"
        android:label="DetailSeriesFragment" >
        <argument
            android:name="seriesId"
            app:argType="string" />
    </fragment>
</navigation>